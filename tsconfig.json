{
  "compilerOptions": {
    "declaration": true,
    "lib": ["es2017"],
    "module": "NodeNext",
    "target": "ES2022",
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "useUnknownInCatchVariables": false,
    "outDir": "dist",
    "rootDir": "src",
    "types": [
      "node"
    ]
  },
  "exclude": ["node_modules"]
}
